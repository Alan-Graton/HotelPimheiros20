<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/cinza_escuro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Nome"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="CPF"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtCPF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="000.000.000-00"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Celular"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtCell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="(00) 00000-0000"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Status Hospede"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtStatusHopede"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Status Reserva"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtStatusHopedeReserva"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Número do Cartão"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtNumCartao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="CheckIn"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtCheckIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="datetime"
            android:hint="00/00/000 00:00"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="CheckOut"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtCheckOut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="datetime"
            android:hint="00/00/000 00:00"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Número do Quarto"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtNumQuarto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="number"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Categoria Quarto"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtCategoriaQuarto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:text="Categoria Preço"
            android:textStyle="bold"
            android:textColor="@color/lalanja"/>

        <EditText
            android:id="@+id/txtCategoriaPreco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_notFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reserva"
            android:textColor="@color/laranja_claro"
            android:background="@color/botao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Voltar"
            android:textColor="@color/laranja_claro"
            android:background="@color/botao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>

</LinearLayout>


