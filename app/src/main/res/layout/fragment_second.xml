<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/cinza_escuro">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAlignment="center"
        android:textColor="@color/laranja_claro"
        android:textStyle="bold"
        android:textSize="50px"
        android:shadowColor="@color/black"
        android:text="HOTEL PIMHEIROS" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="275dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hotel" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:shadowColor="@color/black"
            android:text="Localização: Pinheiros"
            android:textAlignment="textStart"
            android:textColor="@color/lalanja"
            android:textSize="40px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="281dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pinheiros" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:textAlignment="viewEnd"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cadastrar/Reserva"
            android:layout_weight="1"
            android:textColor="@color/laranja_claro"
            android:background="@color/botao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/button_ter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sair"
            android:layout_weight="1"
            android:textColor="@color/laranja_claro"
            android:background="@color/botao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </LinearLayout>

</LinearLayout>